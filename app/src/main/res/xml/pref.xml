<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
<PreferenceCategory
    android:title="Opcions alumne">
    <EditTextPreference
        android:defaultValue=""
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/tvnom"
        android:key="etNom"
        android:summary="Nom del alumne."/>
    <ListPreference
        android:title="Grup"
        android:entries="@array/arrayGrups"
        android:entryValues="@array/arrayGrups"
        android:key="grup"
        android:summary="Grup al que pertany el alumne."/>
</PreferenceCategory>
    <PreferenceCategory
        android:title="Colors">
    <CheckBoxPreference
        android:defaultValue="false"
        android:title="Tema fosc"
        android:key="temaFosc"
        android:summary="Cambia a un tema fosc."/>
    </PreferenceCategory>
</PreferenceScreen>
